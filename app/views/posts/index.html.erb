
<% if @posts.any? %>
  <% @posts.each do |post| %>
    <h2> <%= post.description %> </h2>
    <%= link_to "Edit post", edit_post_path(post) %>
    <%= link_to "Delete post", post_path(post), method: :delete %>

  <% end %>
<% else %>
  No posts yet!
<% end %>

<%= link_to "Add post", new_post_path %>
